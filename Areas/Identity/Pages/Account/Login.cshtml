@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="main-content-wrapper">
    <div class="form-card-container">
        <h1 class="form-title">@ViewData["Title"]</h1>
        <p class="form-subtitle">Welcome back! Please log in to continue.</p>

        <div class="form-content-area">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>

                <div class="form-group-custom">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="custom-form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger validation-message"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="custom-form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger validation-message"></span>
                </div>

                <div class="form-check-custom mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button id="login-submit" type="submit" class="custom-btn primary-btn">Log in</button>
                </div>

                <p class="text-center mt-3">
                    @* DODANA KLASA mt-3 za gornju marginu *@
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="form-link">Register as a new user</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}