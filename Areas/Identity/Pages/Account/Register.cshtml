@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    // Layout = "/Views/Shared/_Layout.cshtml"; // Nije obavezno ako _ViewStart.cshtml ispravno radi
}

<div class="main-content-wrapper">
    @* Custom klasa za centralni omotač sa blurom *@
    <div class="form-card-container">
        @* Custom klasa za karticu sa formom *@
        <h1 class="form-title">@ViewData["Title"]</h1>
        <p class="form-subtitle">Create a new account.</p>

        <div class="form-content-area">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>

                <div class="form-group-custom">
                    @* Custom klasa za grupu labela/inputa *@
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="custom-form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger validation-message"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="custom-form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger validation-message"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="custom-form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger validation-message"></span>
                </div>

                <div class="d-grid gap-2">
                    @* Primjenite vaše custom dugme klase *@
                    <button id="registerSubmit" type="submit" class="custom-btn primary-btn">Register</button>
                </div>
            </form>
        </div>
        <p class="mt-4 text-center">
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="form-link">Already have an account? Login here.</a>
        </p>
